<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_main"
    android:padding="16dp">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_display"
        android:text="@string/default_display"
        android:textSize="36sp"
        android:textColor="@color/text_display"
        android:gravity="center_vertical|end"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:maxLines="1"
        android:ellipsize="start" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="@string/btn_clear"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_clear"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_delete"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_delete"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_divide"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_operator"
                android:elevation="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_7"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_8"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_9"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_multiply"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_operator"
                android:elevation="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_4"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_5"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_6"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_subtract"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_operator"
                android:elevation="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_1"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_2"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_3"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_add"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_operator"
                android:elevation="2dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="2"
                android:text="@string/btn_0"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_decimal"
                android:textSize="24sp"
                android:textColor="@color/text_number"
                android:background="@color/button_number"
                android:layout_marginEnd="4dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/btn_equals"
                android:textSize="24sp"
                android:textColor="@color/text_button_white"
                android:background="@color/button_equals"
                android:elevation="2dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
